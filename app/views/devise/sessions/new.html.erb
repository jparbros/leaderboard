<div class="row">
      <div class="col-sm-4 col-sm-offset-4">

        <%= form_tag admin_session_path, class: 'form-horizontal', id: 'new-session-form' do %>
          <fieldset>
            <legend>Login Form</legend>

            <div class="form-group">
              <div class="col-md-12">
                <input type="text " placeholder="Email/username" name="admin[email]" required  class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-md-12">
                <input type="password" name="admin[password]" placeholder="Password" required class="form-control">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12 text-center">
                <button type="submit" class="btn btn-success btn-lg">Login</button>
              </div>
            </div>
          </fieldset>
        <% end %>

      </div>
    </div>

