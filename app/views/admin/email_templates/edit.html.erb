<div class="row main-row">
  <div class="col-md-10 col-md-offset-1 main-row">
    <h1><% @email.name.humanize %></h1>

    <%= form_for [:admin, @email] do |form| %>
      <div class="form-group">
        <label>Subject</label>
        <%= form.text_field :subject, class: 'form-control' %>
      </div>

      <div class="form-group email-template-editor">
        <label>Email Template</label>
        <%= form.text_area :body, class: 'form-control', id: 'rich-text-editor', rows: 30 %>
      </div>

      <button type="submit" class="btn btn-success">Update Email</button>
    <% end %>
  </div>
</div>


<% content_for :javascript do %>
  $(document).ready(function() {
    $('#rich-text-editor').redactor({
      minHeight: 500,
      imageUpload: "?ajax=1&#{params}",
      imageGetJson: "?ajax=1",
      pastePlainText: true
    });
  })
<% end %>
