<% content_for :admin_header do %>
  <ul class="col-md-9 admin-table-header admin-clients-header col-md-offset-3">
    <li>Id</li>
    <li>Company</li>
    <li>Full name of admin</li>
    <li>Email</li>
  </ul>
<% end %>

<table class="table table-striped admin-clients-table">
  <tbody>
    <% @organizations.each do |organization| %>
      <tr ng-repeat="input in inputs">
        <td><%= organization.id %></td>
        <td><%= organization.name %></td>
        <td><%= organization.owner.try(:name) %></td>
        <td><%= organization.owner.try(:email) %></td>
      </tr>

    <% end %>
    <% if @organizations.size < 1 %>
      <tr ng-show="!inputs.length">
        <td colspan="4">There is no record, to add a record click at the button new record</td>
      </tr>
    <% end %>
  </tbody>
</table>
