<!DOCTYPE html>
<html>
<head>
  <title>Ranking Desk | Admin</title>
  <base href="/">

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href='http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:300,400,700' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag 'admin', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-fixed-top navbar-layout">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="/"><%= image_tag 'logo_color.png'%></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->

      <% if admin_signed_in? %>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" ng-click='signOut()'>Sign Out</a>
            </li>
          </ul>
        </div>
      <% end %>
    </div>
  </nav>

  <nav class="navbar navbar-fixed-top navbar-app">
    <div class="container">
      <div class="row">
        <%= yield(:admin_header)%>
      </div>
    </div>
  </nav>


  <div class="container users-container">
    <div class="row main-row">

      <% if admin_signed_in? %>
        <div class="col-md-3 sidebar">
          <ul class="nav nav-pills nav-stacked sidebar">
            <li class="<%= clients_active_menu %>"><%= link_to 'Clients', admin_clients_path %></li>
            <li class="<%= emails_active_menu %>"><%= link_to 'Emails', admin_emails_path %></li>
          </ul>
        </div>
      <% end %>

      <div class="<%= admin_signed_in? ? 'col-md-9' : 'col-md-12' %> main">
        <%= yield %>
      </div>
    </div>
  </div>
</body>

<%= javascript_include_tag 'admin', 'data-turbolinks-track' => true %>

<script type="text/javascript">
  <%= yield(:javascript)%>
</script>


</html>