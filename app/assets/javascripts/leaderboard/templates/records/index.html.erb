<nav class="navbar navbar-fixed-top navbar-app">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <a class="btn btn-primary new-record" ng-click="openNewRecord()">New Record</a>
      </div>

      <ul class="col-md-9 users-table-header">
        <li>Date</li>
        <li>Description</li>
        <li>Value</li>
        <li></li>
      </ul>
