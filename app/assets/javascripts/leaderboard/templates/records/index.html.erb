<div class="container users-container">
  <div class="row">

    <div class="col-md-3">
      <ul class="nav nav-pills nav-stacked sidebar">
        <li ng-repeat="(key, value) in currentUser.target"><a href="#" ng-click="selectPeriod(key)">{{key || uppercase}} (Goal: {{value}})</a></li>
      </ul>
    </div>

    <div class="col-md-9 col-md-offset-3 main">
      <table class="table table-striped users-table">
        <tbody>
          <tr ng-repeat="input in inputs">
            <td>{{input.date}}</td>
            <td>{{input.description}}</td>
            <td>{{input.value}}</td>
            <td>
              <a href="#" class="btn btn-primary" ng-click="openEditInput(input)"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit</a>

              <a href="#" class="btn btn-danger" ng-click="openDialogDeleteInput(input)"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete</a>
            </td>
          </tr>
        </tbody>
      </table>

      <ul>
        <li>Total</li>
        <li>Goal</li>
        <li>% Percent</li>
      </ul>

      <ul>
        <li>{{periodDetails.realized}}</li>
        <li>{{periodDetails.currentTarget}}</li>
        <li>{{periodDetails.fullfilment}}</li>
      </ul>

    </div>
  </div>
</div>